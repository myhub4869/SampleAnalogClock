doctype html
html(lang="ja")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport", content="width=device-width, initial-scale=1")

        title アナログ時計

        link(rel="manifest", href="/manifest.webmanifest")
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&family=Poiret+One&display=swap")
        link(rel="stylesheet", href="./css/style.css")

        script(src="./assets/js/main.js")
        script(src="./assets/js/particles.min.js")

    body
        .bg-gradient
        #particles-js.particles-js
        article
            section.clock
                .board
                    - for (var x = 1; x <= 12; x++)
                        div(class=`num-${x}`)
                            span #{x}
                #second
                    img(src="./assets/images/needle_second.svg" width="100%" height="auto")
                #minutes
                    img(src="./assets/images/needle_minutes.svg" width="100%" height="auto")
                #hour
                    img(src="./assets/images/needle_hour.svg" width="100%" height="auto")
            section#date
                p yyy.mm

        //入れたい人は自由に
        script(src="./assets/js/particle.js")

